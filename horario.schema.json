{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "day": {
        "type": "string",
        "enum": [
          "lunes",
          "martes",
          "miercoles",
          "jueves",
          "viernes",
          "sabado",
          "domingo"
        ]
      },
      "status": {
        "type": "string",
        "enum": ["En emisi√≥n", "Por estrenar", "Finalizado"]
      },
      "link": { "type": "string" },
      "image": { "type": "string" },
      "airing": { "type": "boolean" },
      "releaseDate": { "type": "string", "format": "date" },
      "description": { "type": "string" }
    },
    "required": ["name", "day", "status", "link", "image", "airing"],
    "additionalProperties": false
  }
}
